<%= content_tag(
      :div, content_tag(:h3, t('titles.forgot_password'),
      class: 'field form'),
      class: 'field form'
    ) %>

<div class="mb-3">
  <div class="col-md-4 border rounded-bottom shadow mb-3 pt-2">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field form-group mb-2">
        <%= f.label :email, class: 'form-label' %><br />
        <%= f.email_field :email, placeholder: t('text.enter_email'), class: 'form-control shadow-sm' %>
      </div>

      <div class="field form-group mb-2">
        <%= f.submit t('buttons.reset_password'), class: 'btn btn-primary shadow-sm rounded-pill' %>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>